      <contentPack update="true">
        <queries update="true">
          <query category="PRODUCTIVITY" code="cop.currentIssuesLinkable" isUserPortletAvailable="1" source="csk.niku.com">
            
            
            
            
            <nls description="Current Issues Listing" languageCode="en" name="Current Issues Listing"/>
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
            <nsql dbId="Niku" dbVendor="all"><![CDATA[SELECT  DISTINCT
        @SELECT:DIM:USER_DEF:IMPLIED:ISSUE:rim.id:issue_int_id@,
        @SELECT:DIM_PROP:USER_DEF:IMPLIED:ISSUE:rim.pk_id:proj_int_id@,
        @SELECT:DIM_PROP:USER_DEF:IMPLIED:ISSUE:inv.code:proj_id@,
        @SELECT:DIM_PROP:USER_DEF:IMPLIED:ISSUE:inv.name:proj_name@,
        @select:dim_prop:user_def:implied:ISSUE:@UPPER@(inv.odf_object_code):investment_type_upper@,
        @SELECT:DIM_PROP:USER_DEF:IMPLIED:ISSUE:rim.rim_risk_issue_code:issue_id@,
        @SELECT:DIM_PROP:USER_DEF:IMPLIED:ISSUE:rim.name:issue_name@,
        @SELECT:DIM_PROP:USER_DEF:IMPLIED:ISSUE:rim.description:description@,
        @SELECT:DIM_PROP:USER_DEF:IMPLIED:ISSUE:rim.resolution:resolution@,
        @SELECT:DIM_PROP:USER_DEF:IMPLIED:ISSUE:category.name:category@,
        @SELECT:DIM_PROP:USER_DEF:IMPLIED:ISSUE:CASE WHEN rim.priority_code = 'LOW' THEN 1 
                                                     WHEN rim.priority_code = 'MEDIUM' THEN 2 
                                                     WHEN rim.priority_code = 'HIGH' THEN 3 ELSE NULL END:priority_sl@,
        @SELECT:DIM_PROP:USER_DEF:IMPLIED:ISSUE:priority.name:priority@,
        @SELECT:DIM_PROP:USER_DEF:IMPLIED:ISSUE:status.name:status@,
        @SELECT:DIM_PROP:USER_DEF:IMPLIED:ISSUE:r.full_name:assigned_to@,
        @SELECT:DIM_PROP:USER_DEF:IMPLIED:ISSUE:r.email:assigned_email@,
        @SELECT:DIM_PROP:USER_DEF:IMPLIED:ISSUE:rc.full_name:created_by@,
        @SELECT:DIM_PROP:USER_DEF:IMPLIED:ISSUE:rim.created_date:created_date@,
        @SELECT:DIM_PROP:USER_DEF:IMPLIED:ISSUE:rim.target_resolution_date:target_resolve_date@,
        @SELECT:DIM_PROP:USER_DEF:IMPLIED:ISSUE:rim.resolved_date:resolved_date@,
        @SELECT:DIM_PROP:USER_DEF:IMPLIED:ISSUE:ru.full_name:last_updated_by@,
        @SELECT:DIM_PROP:USER_DEF:IMPLIED:ISSUE:rim.last_updated_date:last_updated_date@,
        @SELECT:METRIC:USER_DEF:IMPLIED:@DBUSER@.CMN_DATEDIFF_FCT(@DBUSER@.COP_DATE_TRUNC_FCT(@SYSDATE@),@DBUSER@.COP_DATE_TRUNC_FCT(rim.target_resolution_date)):schedule_sl@
FROM    rim_risks_and_issues rim
        INNER JOIN inv_investments inv ON  rim.pk_id = inv.id
                                       AND inv.is_active <> 0
        INNER JOIN inv_projects prj ON  inv.id = prj.prid
                                    AND prj.is_template <> 1
                                    AND prj.is_program <> 1
        LEFT OUTER JOIN srm_resources r ON rim.assigned_to = r.user_id
        LEFT OUTER JOIN srm_resources rc ON rim.created_by = rc.user_id
        LEFT OUTER JOIN srm_resources ru ON rim.last_updated_by = ru.user_id
        LEFT OUTER JOIN prj_obs_associations assoc ON  inv.id = assoc.record_id 
                                                   AND @UPPER@(assoc.table_name) = 'SRM_PROJECTS'
        LEFT OUTER JOIN prj_obs_units_flat flat ON assoc.unit_id = flat.unit_id
        LEFT OUTER JOIN cmn_lookups_v status ON  status.lookup_code = rim.status_code
                                             AND status.lookup_type = 'RIM_STATUS' 
                                             AND status.language_code =  @WHERE:PARAM:LANGUAGE@
        LEFT OUTER JOIN cmn_lookups_v category ON  category.lookup_code = rim.category_type_code
                                               AND category.lookup_type = 'RIM_CATEGORY_TYPE' 
                                               AND category.language_code =  @WHERE:PARAM:LANGUAGE@
        LEFT OUTER JOIN cmn_lookups_v priority ON  priority.lookup_code = rim.priority_code
                                               AND priority.lookup_type = 'RIM_PRIORITY' 
                                               AND priority.language_code =  @WHERE:PARAM:LANGUAGE@
WHERE   rim.status_code NOT IN ('CLOSED','RESOLVED')
AND     rim.type_code = 'ISSUE'
AND     rim.target_resolution_date BETWEEN (@NVL@(@WHERE:PARAM:USER_DEF:DATE:AS_OF_DATE@,@SYSDATE@) - @NVL@(@WHERE:PARAM:USER_DEF:INTEGER:DAYS@,45)) 
                                   AND (@NVL@(@WHERE:PARAM:USER_DEF:DATE:AS_OF_DATE@,@SYSDATE@) + @NVL@(@WHERE:PARAM:USER_DEF:INTEGER:DAYS@,45))
AND     (@WHERE:PARAM:XML:STRING:/data/Priority/@value@ IS NULL OR @WHERE:PARAM:XML:STRING:/data/Priority/@value@ = rim.priority_code)
AND     (@WHERE:PARAM:USER_DEF:INTEGER:MANAGER_ID@ IS NULL OR @WHERE:PARAM:USER_DEF:INTEGER:MANAGER_ID@ = inv.manager_id)
AND     (@WHERE:PARAM:USER_DEF:INTEGER:OBS@ IS NULL OR @WHERE:PARAM:USER_DEF:INTEGER:OBS@ = flat.branch_unit_id)
AND     ((rim.category_type_code IS NULL) OR (@WHERE:PARAM:USER_DEF:STRING:rim.category_type_code:CATEGORY@))
AND     ((rim.status_code IS NULL)   OR (@WHERE:PARAM:USER_DEF:STRING:rim.status_code:STATUS@))
AND     ((rim.assigned_to IS NULL)   OR (@WHERE:PARAM:USER_DEF:INTEGER:rim.assigned_to:ASSIGNED_TO@))
AND     @WHERE:SECURITY:PROJECT:inv.id@
AND     @FILTER@]]></nsql>
